{
  "mcpServers": {
    "reaper": {
      "command": "{{ reaper_mcp_server_setup.repo_path }}/.venv/bin/uv",
      "args": [
        "--directory",
        "{{ reaper_mcp_server_setup.repo_path }}",
        "run",
        "-m",
        "reaper_mcp_server.server",
        "--reaper-projects-dir",
        "{{ reaper_mcp_server_setup.projects_dir }}"
      ]
    },
    "Figma": {
      "command": "{{ figma_mcp_server_setup.exe_path }}",
      "args": [
        "--figma-api-key={{ figma_mcp_server_setup.personal_key }}",
        "--stdio"
      ]
    },
    "figma-comments": {
      "command": "{{ figma_mcp_commentary_server_setup.exe_path }}",
      "env": {
        "FIGMA_ACCESS_TOKEN": "{{ figma_mcp_commentary_server_setup.personal_key }}"
      }
    },
    "chrome-devtools": {
      "command": "{{ chrome_devtools_mcp_server_setup.exe_path }}",
      "args": ["--browserUrl=http://localhost:9222"]
    },
    "playwright": {
      "command": "{{ playwright_mcp_server_setup.exe_path }}",
      "args": ["--executable-path=/usr/bin/chromium", "--browser=chromium"]
    },
    "playwright-extension": {
      "command": "{{ playwright_mcp_server_setup.exe_path }}",
      "args": [
        "--extension",
        "--executable-path",
        "/usr/bin/chromium",
        "--browser",
        "chromium"
      ],
      "env": {
        "PLAYWRIGHT_MCP_EXTENSION_TOKEN": "{{ playwright_mcp_server_setup.auth_key }}"
      }
    }
  }
}
